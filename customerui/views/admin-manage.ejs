<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - User Management</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #e6f2fb;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .layout {
      display: flex;
      gap: 20px;
      max-width: 1200px;
      margin: 40px auto;
    }

    .user-section {
      flex: 3;
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .admin-panel {
      flex: 1.2;
      background-color: #ffffff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
      color: #003366;
      margin-bottom: 20px;
    }

    .search-input {
      width: 100%;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin-bottom: 25px;
      font-size: 16px;
    }

    .user-list {
      list-style: none;
      padding: 0;
    }

    .user-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px;
      margin-bottom: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #ffffff;
    }

    .user-info {
      flex: 1;
    }

    .remove-btn {
      background-color: #e74c3c;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .remove-btn:hover {
      background-color: #c0392b;
    }

    .admin-panel button {
      width: 100%;
      padding: 12px;
      margin-bottom: 12px;
      background-color: #007acc;
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
    }

    .admin-panel button:hover {
      background-color: #005b99;
    }
  </style>
</head>
<body>
  <div class="layout">
    <!-- User List -->
    <div class="user-section">
      <h1>Admin - All Users</h1>
      <input
        id="searchInput"
        type="text"
        class="search-input"
        placeholder="Search users by name, email, or club..."
        oninput="filterUsers()"
      />

      <ul class="user-list">
  <% users.forEach(user => { %>
    <li class="user-item">
      <div class="user-info">
        <strong><%= user.firstName %> <%= user.lastName %></strong><br>
        Email: <%= user.email %><br>
        Role: <%= user.role %><br>

        <% if (user.clubs && user.clubs.length > 0) { %>
          Clubs:
          <ul>
            <% user.clubs.forEach(club => { %>
              <li><%= club.clubName %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <em>No club assigned</em>
        <% } %>
      </div>

    <% const cleanID = user.userID.toString().replace(/[{}]/g, '').trim(); %>
<button
  class="remove-btn"
  onclick="removeUser('<%= cleanID %>', '<%= user.firstName %> <%= user.lastName %>')"
>
  Remove
</button>


    </li>
  <% }) %>
</ul>

    </div>

    <!-- Admin Actions -->
    <div class="admin-panel">
      <h2>Admin Actions</h2>
      <form action="/approveClubRequest" method="GET">
        <button type="submit">Club creation Requests</button>
      </form>
      <form action="/approveJoinRequests" method="GET">
        <button type="submit">Club Join Requests</button>
      </form>
      <form action="/removeMember" method="GET">
        <button type="submit">Remove Users from Clubs</button>
      </form>
      <form action="/addEvent" method="GET">
        <button type="submit">Add Events to Clubs</button>
      </form>
    </div>
  </div>

  <script>
  function filterUsers() {
    const input = document.getElementById('searchInput').value.toLowerCase();
    const items = document.querySelectorAll('.user-item');
    items.forEach(item => {
      const content = item.textContent.toLowerCase();
      item.style.display = content.includes(input) ? 'flex' : 'none';
    });
  }

  async function removeUser(userID, userName) {
  console.log("üîé Trying to remove user:", userID, userName);

  if (!userID || typeof userID !== 'string') {
    alert('‚ùå Invalid or missing user ID.');
    return;
  }

  try {
    const res = await fetch('/remove-user', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ userID, userName })
    });

    const result = await res.json();
    alert(result.message);
    if (result.success) location.reload();
  } catch (err) {
    console.error("‚ùå Error removing user:", err);
    alert(`‚ùå Failed to remove ${userName}.`);
  }
}

</script>
<!-- Floating Logout Button -->
<form class="logout-button" action="/logout" method="GET">
  <button type="submit">Logout</button>
</form>

<style>
  .logout-button {
    position: fixed;
    bottom: 20px;
    right: 20px;
    margin: 0;
  }

  .logout-button button {
    background: linear-gradient(135deg, #00c6ff, #0072ff);
    color: white;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    font-weight: bold;
    cursor: pointer;
  }

  .logout-button button:hover {
    opacity: 0.9;
  }
</style>
</body>
</html>
