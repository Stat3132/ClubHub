<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Manage Users</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    #searchInput {
      width: 100%;
      padding: 8px;
      margin: 12px 0;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    .user-item {
      margin: 8px 0;
      padding: 10px;
      border-bottom: 1px solid #e0e0e0;
    }
  </style>
  <script>
    function filterUsers() {
      const input = document.getElementById('searchInput').value.toLowerCase();
      const items = document.querySelectorAll('.user-item');
      items.forEach(item => {
        const clubs = item.dataset.clubs.toLowerCase();
        item.style.display = clubs.includes(input) ? 'block' : 'none';
      });
    }
  </script>
</head>
<body>
  <div class="form-container">
    <h1>Admin Dashboard: Manage Users</h1>

    <input id="searchInput" type="text" placeholder="Search by club name..." oninput="filterUsers()">

    <ul>
      <% users.forEach(user => { %>
        <li class="user-item" data-clubs="<%= user.clubs.map(c => c.clubName).join(',') %>">
          <strong><%= user.firstName %> <%= user.lastName %></strong> - <%= user.email %> (<%= user.role %>)
          <% if (user.clubs.length > 0) { %>
            <div>Clubs: <%= user.clubs.map(c => c.clubName).join(', ') %></div>
          <% } else { %>
            <div>Clubs: None</div>
          <% } %>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
